<Window x:Class="quickIpSettings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:quickIpSettings"
        mc:Ignorable="d"
        Title="Quick IP settings" Height="450" Width="800"
        ResizeMode="CanMinimize">
    <Grid Background="#E2E2E2">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Verdana" FontSize="35" Foreground="#384D48">Quick IP Settings</TextBlock>
        <StackPanel Margin="10,65,19,10" Name="AdapterStackPanel" Background="#384D48" Orientation="Vertical" CanVerticallyScroll="True">
            <!--
            <Canvas Margin="10,80,10,249" Background="#D8D4D5" x:Name="dummyCanvas" Height="73">
                <TextBlock FontFamily="Verdana" FontSize="14" Canvas.Left="209"><Run Text="Interface name"/></TextBlock>
            </Canvas>
            -->
        </StackPanel>
        
        <Button Foreground="#384D48" Margin="621,20,19,364" Background="#ACAD94" Click="Button_Click">Scan network interfaces</Button>
    </Grid>
</Window>
